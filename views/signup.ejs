<% include ./partials/default/header %>
<div class="container">
    <div class="container new_HeadContain" style="max-width: 40%">
        <h1 class="text-center">Sign Up</h1>
        <form action="/signup" method="POST" style="min-width: 100%">
            <div class="form-group">
                <label for="username">Username: </label>
                <input type="text" class="form-control" name="username" id="username" placeholder="username" autofocus required>
            </div>


            <div class="form-group">
                <label for="email">Email:</label>
                <input id="email" class="form-control" name="email" type="email" placeholder="example@example">
            </div>

            <div class="form-group">
                <label for="password">Password: </label>
                <input type="password" class="form-control" name="password" id="password" placeholder="**********" required>
            </div>

            <input type="submit" class="btn btn-dark btn-lg btn-block" value="Submit" style="overflow: auto; font-size: 1em">
        </form>
    </div>
</div>
<% include ./partials/default/footer %>