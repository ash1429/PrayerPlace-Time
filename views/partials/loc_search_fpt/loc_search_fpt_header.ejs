        <ul class="nav navbar-nav navbar-right">
          <% if(!currentUser){ %>
          <li><a href="/login">Login</a></li>
          <li><a href="/signup">Sign Up</a></li>
          <% } else {%>
          <li><a href="/user/<%= currentUser.username %>"><%= currentUser.username %></a></li>
          <li><a href="/logout">Logout</a></li>
          <% } %>
        </ul>
      </div><!-- /.navbar-collapse -->
